<?xml version="1.0" encoding="UTF-8"?>
 
<layout>
    <default>
 
        <!-- Remove callouts and rarely used stuff -->
        <remove name="right.poll"/>
        <remove name="right.permanent.callout"/>
        <remove name="left.permanent.callout"/>
        <remove name="paypal.partner.right.logo"/>
 
        <!-- add the local stylesheet -->
        <reference name="head">
            <action method="addCss"><stylesheet>css/local.css</stylesheet></action>
            <action method="addJs"><script>js/builder.js</script></action>
        </reference>
        
        <reference name="root">
            <action method="setTemplate"><template>page/new-layout.phtml</template>
              <!-- Mark root page block that template is applied -->
              <action method="setIsHandle"><applied>1</applied></action>
            </action>
        </reference>
        
        
        <!-- add the local stylesheet -->
        <layoutUpdate>
          <reference name="page_two_columns_right">
            <block type="new/page_two_columns_right" name="new.page_two_columns_right">
              <action method="setTemplate">
                <template>page/new-layout.phtml</template>
              </action>
            </block>
          </reference>
        </layoutUpdate>
        

        
        <!-- add the local stylesheet -->
<!--        <layoutUpdate>
          <reference name="after_body_start">
            <block type="head/after_body_start" name="head.after_body_start">
              <action method="setTemplate">
                <template>page/after_body_start.phtml</template>
              </action>
            </block>
          </reference>
        </layoutUpdate>-->
 
    </default>
    
    <!-- add the local stylesheet -->
    <new_layout translate="label">
        <label>New Layout</label>
        <reference name="root">
            <action method="setTemplate"><template>page/new-layout.phtml</template></action>
            <!-- Mark root page block that template is applied -->
            <action method="setIsHandle"><applied>1</applied></action>
        </reference>
    </new_layout>
</layout>
