<?xml version="1.0" encoding="UTF-8"?>
 
<layout>
  	<default>
      
		<reference name="right">
      <action method="insert"><alias>left.newsletter</alias></action>
      <action method="unsetChild"><alias>cart_sidebar</alias></action>
      <action method="unsetChild"><alias>right.poll</alias></action>
      <action method="insert"><alias>tags_popular</alias></action>
      
		</reference>
    
		<reference name="left">
      
      <action method="insert"><alias>right.poll</alias></action>
      <action method="insert"><alias>cart_sidebar</alias></action>
      <action method="unsetChild"><alias>left.newsletter</alias></action>
      
      
		</reference>
    </default>
    
    <page_two_columns_right translate="label">
        <label>All Two-Column Layout Pages (Right Column)</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
            <!-- Mark root page block that template is applied -->
            <action method="setIsHandle"><applied>1</applied></action>
            <action method="setLayoutCode"><name>two_columns_right</name></action>
        </reference>
    </page_two_columns_right>
</layout>
